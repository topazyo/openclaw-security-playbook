          "x": 0,
          "y": 8,
          "w": 24,
          "h": 8
        },
        "targets": [
          {
            "datasource": "Elasticsearch",
            "query": "action:\"skill_blocked\" OR openclaw_shield.action:\"block\"",
            "alias": "",
            "metrics": [
              {
                "type": "count",
                "id": "1"
              }
            ],
            "bucketAggs": [
              {
                "type": "terms",
                "field": "skill_name.keyword",
                "settings": {
                  "size": 20,
                  "order": "desc",
                  "orderBy": "_count"
                },
                "id": "2"
              },
              {
                "type": "terms",
                "field": "block_reason.keyword",
                "settings": {
                  "size": 5
                },
                "id": "3"
              },
              {
                "type": "date_histogram",
                "field": "@timestamp",
                "settings": {
                  "interval": "auto",
                  "min_doc_count": 1
                },
                "id": "4"
              }
            ]
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {},
              "indexByName": {
                "skill_name": 0,
                "block_reason": 1,
                "@timestamp": 2,
                "Count": 3
              },
              "renameByName": {
                "skill_name": "Skill Name",
                "block_reason": "Block Reason",
                "@timestamp": "Last Occurrence",
                "Count": "Block Count"
              }
            }
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "align": "left"
            }
          },
          "overrides": [
            {
              "matcher": {
                "id": "byName",
                "options": "Block Count"
              },
              "properties": [
                {
                  "id": "custom.align",
                  "value": "right"
                },
                {
                  "id": "thresholds",
                  "value": {
                    "mode": "absolute",
                    "steps": [
                      {
                        "color": "green",
                        "value": null
                      },
                      {
                        "color": "yellow",
                        "value": 5
                      },
                      {
                        "color": "red",
                        "value": 20
                      }
                    ]
                  }
                },
                {
                  "id": "custom.cellOptions",
                  "value": {
                    "type": "color-background"
                  }
                }
              ]
            }
          ]
        },
        "options": {
          "showHeader": true,
          "sortBy": [
            {
              "displayName": "Block Count",
              "desc": true
            }
          ]
        }
      },
