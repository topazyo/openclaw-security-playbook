{
  "dashboard": {
    "title": "OpenClaw Security Overview",
    "description": "High-level security posture for SOC team",
    "version": "8.12.0",
    "author": "OpenClaw Security Team",
    "created": "2026-02-14T00:00:00Z",
    "tags": ["security", "soc", "monitoring"],
    "timezone": "UTC",
    "refresh": "1m",
    "time": {
      "from": "now-24h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Failed Login Attempts",
        "type": "timeseries",
        "gridPos": {
          "x": 0,
          "y": 0,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "datasource": "Elasticsearch",
            "query": "action:\"login\" AND outcome:\"failure\"",
            "alias": "Failed Logins",
            "metrics": [
              {
                "type": "count",
                "field": "@timestamp"
              }
            ],
            "bucketAggs": [
              {
                "type": "date_histogram",
                "field": "@timestamp",
                "interval": "5m"
              }
            ]
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "lineWidth": 2,
              "fillOpacity": 10
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 5
                },
                {
                  "color": "red",
                  "value": 10
                }
              ]
            }
          }
        },
        "options": {
          "tooltip": {
            "mode": "multi"
          },
          "legend": {
            "display": true,
            "placement": "bottom"
          }
        },
        "alert": {
          "name": "High Failed Login Rate",
          "conditions": [
            {
              "evaluator": {
                "params": [10],
                "type": "gt"
              },
              "operator": {
                "type": "and"
              },
              "query": {
                "params": ["A", "5m", "now"]
              },
              "reducer": {
                "params": [],
                "type": "avg"
              },
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "frequency": "1m",
          "handler": 1,
          "message": "Failed login attempts exceed threshold (>10 per hour). Possible credential stuffing attack. See playbook-credential-theft.md (IRP-001).",
          "noDataState": "no_data",
          "notifications": [
            {
              "uid": "pagerduty-security"
            },
            {
              "uid": "slack-security-alerts"
            }
          ]
        }
      },
      {
        "id": 2,
        "title": "Policy Violations",
        "type": "bargauge",
        "gridPos": {
          "x": 12,
          "y": 0,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "datasource": "Elasticsearch",
            "query": "policy_violation:true",
            "alias": "",
